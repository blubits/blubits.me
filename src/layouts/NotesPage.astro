---
import "@fontsource-variable/inter";
import "@fontsource-variable/inter-tight";
import "@fontsource-variable/jetbrains-mono";
import "../styles/styles-notes.css";
import DefaultPage from "./DefaultPage.astro";

interface Props {
  background_color?: string;
  foreground_color?: string;
  logo_background_color?: string;
  logo_foreground_color?: string;
}

const {
  background_color = "bg-gradient-to-b from-zinc-900 via-zinc-800 to-zinc-700",
  foreground_color = "text-white",
  logo_background_color = "bg-transparent",
  logo_foreground_color = "stroke-white",
} = Astro.props;
---

<DefaultPage
  background_color={background_color}
  foreground_color={foreground_color}
  logo_background_color={logo_background_color}
  logo_foreground_color={logo_foreground_color}
>
  <section>
    <h1
      class="mb-4 font-mono text-3xl font-bold leading-none tracking-tighter md:text-4xl"
    >
      Notes for <span class="text-lime-400">competitive programming</span>
    </h1>

    <ul class="flex flex-wrap items-center gap-x-8 gap-y-2 font-mono">
      <li class="flex-shrink-0 rounded bg-lime-400 px-2 py-0.5 text-gray-900">Home</li>
      <li class="flex-shrink-0">Curriculum</li>
      <li class="flex-shrink-0">All modules</li>
      <li class="flex-shrink-0">All editorials</li>
    </ul>

    <div class="my-8 border-t border-gray-600"></div>
  </section>
  <slot />
</DefaultPage>
