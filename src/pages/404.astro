---
import Chip from "@/components/ui/Chip.astro";
import DefaultPage from "@/layouts/DefaultPage.astro";
import Layout from "@/layouts/Layout.astro";
import "@/styles/themes.css";
---

<Layout 
  themeColorLight="#fee2e2"
  themeColorDark="#7f1d1d"
>
  <DefaultPage theme="error">
    <div class="flex flex-col items-center justify-center gap-y-4">
      <img
        src="/404.svg"
        class="h-64 w-64"
        alt="Sad version of blubits.me logo"
      />
      <h1 class="text-4xl font-bold font-sans-tight">Page not found</h1>
      <p>HTTP error code: <Chip variant="code">404</Chip></p>
    </div>
  </DefaultPage>
</Layout>
