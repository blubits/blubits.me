---
interface Props {
  href: string;
  title: string;
}

const { href, title } = Astro.props;
---
<a
  class:list={[
    "mx-8 md:mx-16 lg:mx-32 xl:max-w-7xl xl:mx-auto grid grid-cols-2 gap-x-4 gap-y-2",
    "hover:rounded-xl active:rounded-xl px-6 py-6",
    "transition-all duration-500 ease-out",
    "transform translate-y-0 hover:-translate-y-2",
    "hover:z-50 hover:scale-[1.02] active:scale-[1.02]",
    "border border-transparent hover:border-white/25 first:border-t first:border-transparent first:hover:border-t first:hover:border-white/25 dark:hover:border-gray-600/40 dark:first:hover:border-gray-600/40",
    "hover:bg-white/15 active:bg-white/20 dark:hover:bg-black/20 dark:active:bg-black/30",
    "hover:backdrop-blur-md hover:backdrop-saturate-150",
    "hover:shadow-2xl",
    "md:grid-cols-6 lg:grid-cols-7 lg:px-4",
    "cursor-pointer"
  ]}
  href={href}
  ontouchstart=""
>
    <div class="col-span-4 md:col-span-6 lg:col-span-1">
        <slot name="details-left" />
    </div>
    <div class="col-span-2 space-y-1 md:col-span-4">
        <slot name="image" />
        <h2 class="text-xl font-semibold">{title}</h2>
        <slot name="description" />
    </div>
    <div class="col-span-4 md:col-span-2">
        <slot name="details-right" />
    </div>
</a>