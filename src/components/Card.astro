---
import Emoji from "astro-emoji";

interface Props {
	background?: string;
	text?: string;
	span?: string;
	emoji?: string;
	emoji_size?: string;
	title?: string;
	title_size?: string;
	description?: string;
	href?: string;
	disabled?: boolean;
}

const {
	background = "bg-white",
	text = "text-black",
	span = "col-span-2 md:col-span-3 lg:col-span-2 md:row-span-1",
	emoji = "ðŸŽ‰",
	emoji_size = "text-3xl",
	title = "Default title",
	title_size = "text-xl",
	description = undefined,
	href = undefined,
	disabled = false
} = Astro.props;
---

<a
	class:list={[
		"group block px-6 py-6 rounded-lg transition duration-300 hover:z-50",
		background,
		span,
		disabled ? "cursor-not-allowed opacity-50 -z-50" : "hover:scale-105 hover:shadow-xl"
	]}
	href={disabled ? undefined : href}
	data-obfuscation="0"
	aria-disabled={disabled}
>
	<div class="flex flex-col h-full gap-4">
		<div class="grow">
			<Emoji symbol={emoji} class:list={[emoji_size]} />
		</div>
		<div class="grow-0">
			<h2 class:list={["font-semibold", title_size, text]}>
				{title}
			</h2>
			<p class:list={["mt-2", text]}>
				{description}
			</p>
		</div>
	</div>
</a>
