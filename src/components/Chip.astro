---
interface Props {
  bg_color?: string;
  classNames?: string;
  isCode?: boolean;
  large?: boolean;
}

const {
  bg_color = "bg-slate-300",
  classNames = "",
  isCode = false,
  large = false,
} = Astro.props;
---

{
  () => {
    if (isCode) {
      return (
        <code
          class:list={[
            "inline-flex items-center gap-x-2 font-mono self-start",
            large ? "rounded-lg px-4 py-2" : "rounded-sm px-2 py-0.5",
            bg_color,
            classNames,
          ]}
        >
          <slot />
        </code>
      );
    } else {
      return (
        <span
          class:list={[
            "inline-flex items-center gap-x-2 self-start",
            large ? "rounded px-4 py-2 shadow-sm" : "rounded-sm px-2 py-0.5",
            bg_color,
            classNames,
          ]}
        >
          <slot />
        </span>
      );
    }
  }
}
