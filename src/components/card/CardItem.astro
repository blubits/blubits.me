---
import { CARD_DIMENSIONS } from '@blubits/constants/ui';

export interface Props {
  title: string;
  description: string;
  href?: string;
  theme?: 'default' | 'disabled';
  customHeight?: string;
}

const {
  title,
  description,
  href,
  theme = 'default',
  customHeight,
} = Astro.props;

const themeClasses = {
  default: 'bg-transparent hover:bg-white active:bg-white text-black hover:text-black active:text-black',
  disabled: '-z-50 cursor-not-allowed opacity-50',
};

const height = customHeight || CARD_DIMENSIONS.height;
---

<a
  class:list={[
    "z-50 flex flex-col gap-4",
    height,
    "rounded py-6 px-6",
    "snap-start",
    "transition duration-300 ease-in-out",
    themeClasses[theme],
    theme === 'default' && [
      "hover:z-50 hover:scale-105 hover:shadow",
      "active:z-50 active:scale-105 active:shadow",
      "cursor-pointer",
    ],
    "first:ml-2 scroll-ml-2",
    "md:first:ml-10 md:scroll-ml-10",
    "lg:first:ml-26 lg:scroll-ml-26",
    "2xl:scroll-ml-[calc(((100vw-80rem)/2)-24px)]",
    "2xl:first:ml-[calc(((100vw-80rem)/2)-24px)]"
  ]}
  href={href}
  ontouchstart=""
>
  <div class:list={[CARD_DIMENSIONS.thumbnailHeight, CARD_DIMENSIONS.width, "object-cover"]}>
    <slot name="thumbnail" />
  </div>
  <div class:list={["flex flex-col gap-2", CARD_DIMENSIONS.width]}>
    <h2 class="text-xl font-semibold">{title}</h2>
    <p class="text-md">{description}</p>
  </div>
</a>
