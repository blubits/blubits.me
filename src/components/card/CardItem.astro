---
export interface Props {
  title: string;
  description: string;
  href?: string;
  text_color?: string;
  bg_color?: string;
  height?: string;
}

const {
  title,
  description,
  href,
  text_color = "text-black hover:text-black active:text-black",
  bg_color = "bg-transparent hover:bg-white active:bg-white",
  height = "h-88",
} = Astro.props;
---

<a
  class:list={[
    "bg-transparent",
    "z-50 flex flex-col gap-4", height,
    "rounded py-6 px-6",
    "snap-start",
    "transition duration-300 ease-in-out",
    text_color, bg_color,
    "hover:z-50 hover:scale-105 hover:shadow",
    "active:z-50 active:scale-105 active:shadow",
    "cursor-pointer",
    "first:ml-2 scroll-ml-2",
    "md:first:ml-10 md:scroll-ml-10",
    "lg:first:ml-26 lg:scroll-ml-26",
    "2xl:scroll-ml-[calc(((100vw-80rem)/2)-24px)]",
    "2xl:first:ml-[calc(((100vw-80rem)/2)-24px)]"
  ]}
  href={href}
  ontouchstart=""
>
  <div class="h-48 w-64 object-cover">
    <slot name="thumbnail" />
  </div>
  <div class="flex flex-col gap-2 w-64">
    <h2 class="text-xl font-semibold">{title}</h2>
    <p class="text-md">{description}</p>
  </div>
</a>
