// Get the tech info or use fallback
const techInfo = techMapping[tag.toLowerCase()] || {
  name: tag.charAt(0).toUpperCase() + tag.slice(1).replace(/[-_]/g, ' '),
  icon: 'mdi:tag',
  color: '#6b7280'
};
---

<Tag 
  variant={variant}
  size={size}
  background={variant === 'solid' ? techInfo.color : undefined}
  icon={techInfo.icon}
>
  {techInfo.name}
</Tag>